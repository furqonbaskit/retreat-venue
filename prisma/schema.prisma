generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Venue {
  id        String   @id @default(cuid())
  name      String
  location  String
  address   String
  capacity  Int
  price     Float
  photos    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model Booking {
  id            String   @id @default(cuid())
  venueId       String
  venue         Venue    @relation(fields: [venueId], references: [id])
  companyName   String
  email         String
  startDate     DateTime
  endDate       DateTime
  attendeeCount Int
  totalPrice    Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
